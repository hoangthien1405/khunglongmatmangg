void tao_dat(int i)        
{
    int v = rand() % (15 - 1 + 1) + 1;// [1,15]
    switch (v)
    {
    case 1: 
    {
        ground[1][i] = '.';ground[2][i] = ' ';break;
    }
    case 2:
    {
        ground[1][i] = '-';ground[2][i] = ' ';break;
    }
    case 3:
    { 
        ground[1][i] = '`';ground[2][i] = ' ';break;
    }
    case 4:
    {
        ground[1][i] = 248;ground[2][i] = ' ';break;
    }



}
